    tools:context="com.lsourtzo.app.tennisscorekeeper.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/screen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Score Table Area     -->

        <LinearLayout
            android:id="@+id/sky"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TableLayout style="@style/WrapWrap">

                <TableRow style="@style/TableRowStyle">

                    <TextView />

                    <TextView />

                    <TextView
                        android:id="@+id/gamenumber"
                        style="@style/TableText4"
                        android:layout_marginLeft="@dimen/TableScoreTextMarginLarge"
                        android:layout_marginRight="@dimen/TableScoreTextMarginLarge"
                        android:text="Game 0" />


                    <TextView
                        style="@style/TableText4"
                        android:text="1" />

                    <TextView
                        style="@style/TableText4"
                        android:text="2" />

                    <TextView
                        style="@style/TableText4"
                        android:text="3" />

                    <TextView
                        style="@style/TableText4"
                        android:text="4" />

                    <TextView
                        style="@style/TableText4"
                        android:text="5" />

                    <TextView
                        style="@style/TableText4"
                        android:layout_marginLeft="@dimen/TableScoreTextMarginLarge"
                        android:layout_marginRight="@dimen/TableScoreTextMarginMedium"
                        android:text="Set" />

                </TableRow>

                <TableRow style="@style/TableRowStyle">

                    <TextView
                        android:id="@+id/name11"
